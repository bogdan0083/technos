

// categories nav

.categories-nav
	overflow: hidden
	+above($screen-sm)
		overflow: visible
		position: absolute
		left 0
		top 55%
		transform translateY(-100%)
		width: 100%

.categories-nav-item
	height: 116px
	vertical-align: middle
	background-color: $dark-blue
	display: table
	width: 100%
	text-decoration: none
	transition all 0.3s
	text-align: center
	margin 20px 0
	padding 10px 20px
	&:hover
		background-color: white
		color $dark-blue
		h2
			font-weight: 500
	.btn, .label-mark
		display: none
	&:hover
		text-decoration: underline
	h2
		text-decoration: none
		display: table-cell
		vertical-align: middle
		font-weight: 400
		text-transform: uppercase
		font-size 1.231rem
		line-height: 1.5
		position: relative
		z-index: 10
	+above($screen-sm)
		background-color: transparent
		text-align: left
		padding 10px 0
		height: 142px
		border-top 1px solid white
		border-bottom 1px solid white
		position: relative
		h2
			display: table-cell
			vertical-align: middle
		.label-mark
			position: absolute
			bg('../images/label.png')
			right 0
			bottom 5px
			display: table
			text-align: center
			span
				font-weight: 700
				color black
				text-transform: uppercase
				transform rotate(-13deg)
				display: table-cell
				font-size: 1.2rem
				vertical-align: middle
		.btn
			display: inline-block
			position: absolute
			left 0
			bottom 20px
			transition all 0.3s
			opacity: 0
		&:hover
			background-color: transparent
			color white
			text-decoration: none
			padding-bottom: 70px
			padding-top: 30px
			//transform translateY(-30px)
			.btn
				opacity: 1
			h2
				text-decoration: none

// FEATURE

.feature
	position: relative
	padding 10px 0 10px 72px
	font-size: 1.1rem
	+above($screen-sm)
		text-align: center
		padding: 0
		max-width: 210px
		margin: 0 auto
	.icon
		position: absolute
		left 0
		top 50%
		transform translateY(-50%)
		+above($screen-sm)
			position: relative
			top auto
			left 0
			transform none
			display: block
			margin: 0 auto

		
.layout
	padding-bottom: 40px
	background-color: white
	color $dark-blue


.site-top
	+above($screen-sm)
