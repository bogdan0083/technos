.header
	width: 100%
	padding-top: 20px
	margin-bottom: 40px
	color white
	.nav-trigger-wrap
		margin-top: 2px
	&-aside
		+above($screen-sm)
			float: left
			width: 200px
		+above($screen-md)
			width: 270px
	&-body
		overflow: hidden

.logo
	font-size 2.846rem
	text-decoration: none
	text-transform: uppercase
	+above($screen-sm)
		font-size 2rem
		display: inline-block
	+above($screen-md)
		font-size 2.923rem
		display: inline-block
	span
		color #e4e3f5
	&-caption
		font-size: 1.388rem
		text-align: center
		margin-top: 6px
		line-height: 1.3
		+above($screen-sm)
			font-size 0.9rem
			text-align: left
		+above($screen-md)
			font-size 1.077rem
			text-align: left

.address-block
	text-align: center
	position: relative
	font-size: 1.846rem
	margin 15px 0
	.phone
		font-weight: 500
		margin-bottom: 15px
		+above($screen-sm)
			margin-bottom: 0
	&-secondary
		display: none
		+above($screen-sm)
			display: inline-block
	.icon
		display: none
	+above($screen-sm)
		display: inline-block
		font-size 1rem
		text-align: left
		line-height: 1.5
		padding-left: 28px
		width: 230px
		vertical-align: middle
		margin: 0
		.icon
			display: inline-block
			position: absolute
			left 0
			top 50%
			margin-top: -13px

	+above($screen-md)
		width: auto
		&-secondary
			margin-left 40px

.cart-block
	text-transform: uppercase
	margin-top: 10px
	&:hover
		.cart-block-count
			background-color: white
			color $dark-blue
	+above($screen-sm)
		margin-top: 14px
		display: inline-block
		vertical-align: middle
		margin-left: 20px
		float: right
	+above($screen-md)
		margin-top: 5px
	&-count
		text-decoration: none
		height: 25px
		width: 25px
		margin-right: 4px
		display: inline-block
		vertical-align: middle
		border 1px solid white
		text-align: center
		line-height: 24px
		font-size: 0.9rem
	.icon
		margin-right: 4%
	.cart-block-link
		text-decoration: none
	.cart-block-checkout
		float: right
		margin-top: 2px
		+above($screen-sm)
			text-transform: none
	.cart-block-link, .cart-block-checkout
		font-size 1.385rem
		vertical-align: middle
		display: inline-block
		+above($screen-sm)
			font-size: 1rem
			float: none
			display: block
			text-align: right
			line-height: 1.3
	+above($screen-sm)
		position: relative
		margin-left: 0
		padding-left: 68px
		&-count, .i-cart
			position: absolute
		&-count
			left 0
			top 3px
		.i-cart
			left 34px
			top 4px

.header-nav
	margin-bottom: -6px
	ul
		padding: 0
		margin: 0
		list-style none
		text-align: justify
		padding-top: 4px
		&:after
			content ''
			width: 100%
			display: inline-block
		li
			display: inline-block
		a, span
			text-decoration: none
			text-transform: uppercase
			font-weight: 700
			padding 10px
			display: block
			position: relative
			transition all 0.3s
			font-size: 0.9rem
			+above($screen-md)
				font-size: 1rem
			&:before, &:after
				content ''
				width: 28px
				height: 1px
				background-color: white
				position: absolute
				left 50%
				top 0
				margin-left: -14px
				transition all 0.3s
				transform translateX(-100%)
				opacity: 0
			&:after
				top auto
				bottom 0
				transform translateX(100%)
		a:hover, span
			&:before, &:after
				opacity: 1
				transform none

