

// categories nav

.categories-nav
	overflow: hidden
	+above($screen-sm)
		overflow: visible
		position: absolute
		left 0
		top 55%
		transform translateY(-100%)
		width: 100%

.categories-nav-item
	height: 116px
	vertical-align: middle
	background-color: $dark-blue
	display: table
	width: 100%
	text-decoration: none
	transition all 0.3s
	text-align: center
	margin 20px 0
	padding 10px 20px
	&:hover
		background-color: white
		color $dark-blue
		h2
			font-weight: 500
	.btn, .label-mark
		display: none
	&:hover
		text-decoration: underline
	h2
		text-decoration: none
		display: table-cell
		vertical-align: middle
		font-weight: 400
		text-transform: uppercase
		font-size 1.231rem
		line-height: 1.5
		position: relative
		z-index: 10
	+above($screen-sm)
		background-color: transparent
		text-align: left
		padding 10px 0
		height: 142px
		border-top 1px solid white
		border-bottom 1px solid white
		position: relative
		h2
			display: table-cell
			vertical-align: middle
		.label-mark
			position: absolute
			bg('../images/label.png')
			right 0
			bottom 5px
			display: table
			text-align: center
			span
				font-weight: 700
				color black
				text-transform: uppercase
				transform rotate(-13deg)
				display: table-cell
				font-size: 1.2rem
				vertical-align: middle
		.btn
			display: inline-block
			position: absolute
			left 0
			bottom 20px
			transition all 0.3s
			opacity: 0
		&:hover
			background-color: transparent
			color white
			text-decoration: none
			padding-bottom: 70px
			padding-top: 30px
			//transform translateY(-30px)
			.btn
				opacity: 1
			h2
				text-decoration: none

// FEATURE

.feature
	position: relative
	padding 10px 0 10px 72px
	font-size: 1.1rem
	+above($screen-sm)
		text-align: center
		padding: 0
		max-width: 210px
		margin: 0 auto
	.icon
		position: absolute
		left 0
		top 50%
		transform translateY(-50%)
		+above($screen-sm)
			position: relative
			top auto
			left 0
			transform none
			display: block
			margin: 0 auto

		
.layout
	padding-bottom: 40px
	background-color: white
	color $dark-blue


.site-top
	padding-bottom: 40px

// BREADCRUMBS

.breadcrumbs
	color white
	.divider
		margin 0 10px
	a, span
		text-transform: uppercase
		text-decoration: none
	span:last-child
		font-weight: 700

.layout
	padding-top: 40px

.layout-aside
	width: 100%
	margin: 0 auto
	position: relative
	z-index: 10
	+above($screen-sm)
		float: left
		margin-right: 30px
		width: 230px

.layout-center
	+above($screen-sm)
		float: left
		width: 100%
		padding-left: 260px
		margin-left: -260px
.catalog-nav
	background-color: #f3f3f3
	border-top 1px solid $dark-blue
	padding-top: 15px
	margin-bottom: 30px
	display: none
	+above($screen-sm)
		display: block
	h1
		font-size 1.385rem
		text-transform: uppercase
		color #213452
		text-align: center
	.catalog-nav-list
		padding: 0
		margin: 0
		list-style none
		> li > a
			display: block
			text-decoration: none
			text-transform: uppercase
			transition all 0.3s
			position: relative
			line-height: 1.4
			padding 20px 25px 20px 45px
			font-size: 0.95rem
			&:after
				content ''
				sprite($arr_down)
				position: absolute
				right 10px
				top 50%
				margin-top: -5px
			.icon
				position: absolute
				left 25px
				top 50%
				transform translate(-50%, -50%)
			&:hover
				font-weight: 700
		.no-subcat
			> a:after
				display: none
		.submenu
			padding 20px 0
			list-style none
			margin: 0
			background-color: #e4e3f5
			box-shadow inset 0 0 30px 0 rgba(black, 0.1)
			display: none
			&.active
				display: block
			a
				display: block
				padding 15px 20px
				text-decoration: none
				text-align: center
				position: relative
				&:before, &:after
					content ''
					width: 28px
					height: 1px
					background-color: $dark-blue
					position: absolute
					left 50%
					top 0
					margin-left: -14px
					transition all 0.3s
					transform translateX(-100%)
					opacity: 0
				&:after
					top auto
					bottom 0
					transform translateX(100%)
				&:hover
					&:before, &:after
						opacity: 1
						transform none


.aside-nav-trigger
	text-transform: uppercase
	font-weight: 700
	text-decoration: none
	font-size: 1.8rem
	text-align: center
	display: block
	margin-bottom: 10px
	span
		display: inline-block
		position: relative
		text-align: center
		padding-right: 20px
		&:after
			content ''
			sprite($arr_down)
			position: absolute
			right -4px
			top 50%
			margin-top: -5px
	+above($screen-sm)
		display: none

.items-row
	margin 0 -20px
	text-align: center

.product-item
	margin 15px 16px 15px 20px
	display: inline-block
	border 1px solid #d3d6dc
	text-align: center
	width: 230px
	padding 0 15px 20px
	transition all 0.3s
	&:hover
		box-shadow 0 0 30px 0 rgba(black, 0.2)
		.item-link
			font-weight: 700
	.image-link
		display: block
		height: 190px
		font-size: 0
		position: relative
		&:after
			content ''
			width: 130px
			background-color: $dark-blue
			left 50%
			bottom 0
			margin-left -65px
			position: absolute
			height: 1px
		img
			vertical-align: middle
			display: inline-block
		&:before
			content ''
			height: 100%
			vertical-align: middle
			display: inline-block
	.item-link
		text-decoration: none
		height: 60px
		display: table
		width: 100%
		text-transform: uppercase
		span
			display: table-cell
			vertical-align: middle
			line-height: 1.4
	.price
		margin-bottom: 16px
		font-size: 1.3rem

.price
	font-weight: 700
	display: block
	font-size: 1.3rem

.ruble
	font-style: normal
	margin-left: 7px


.pagination
	text-align: center
	margin-top: 10px
.pagination-right, .pagination-left
	height: 26px
	width: 26px
	display: inline-block
	border 1px solid #e4e3f5
	margin 10px 4px
	background: url(../images/icons/arr-pixel-left.png) no-repeat center
	transition all 0.3s
	&:hover
		background-color: #e4e3f5

.pagination-right
	background-image: url(../images/icons/arr-pixel-right.png)

// NEWS-ASIDE

.news-aside
	border 1px solid #e4e6e9
	padding 20px 20px 8px
	margin-top: 30px
	text-align: center
	h2
		margin-top: 0
		display: inline-block
		border-bottom: 1px solid $dark-blue
		text-align: center
		text-transform: uppercase
		font-size: 1.1rem
		padding-bottom: 6px
	&-block
		text-align: left
		margin 14px 0
		.link
			display: block
			margin-bottom: 5px
			text-decoration: none
			&:hover
				text-decoration: underline
		.date
			font-size 0.923rem


// POPUPAR ITEMS

.popular-items
	padding 30px 0
.popular-items-slider
	.product-item
		margin 15px 16px

.services-showcase
	text-align: center
	padding 20px 0
	+above($screen-sm)
		padding-bottom: 50px
		.heading
			margin-bottom: 50px
.service-feature
	display: inline-block
	width: 170px
	margin 10px 17px
	vertical-align: top
	position: relative
	padding-top: 95px
	p
		margin-top: 0
		padding-top: 10px
		border-top: 1px solid #6d6d6d
		text-transform: uppercase
		line-height: 1.5
	.icon
		position: absolute
		left 50%
		top 0
		transform translateX(-50%)


// OFFER SECTION

.offer-section
	background url("../images/offer-bg.jpg") no-repeat center / cover
	padding 10px 0 20px
	.btn
		width: 100%
	h2

		margin-top: 10px
		text-align: left
		+above($screen-sm)
			width: 720px
			font-size 1.385rem
		&:before, &:after
			display: none
			text-align: left
	+above($screen-sm)
		.btn
			width: auto
		.field
			width 290px
			display: inline-block
			margin-right: 16px

#page-content
	overflow: hidden

.reviews
	padding 25px 0 20px
	overflow: hidden
	.arrow.slick-arrow
		display: none
		+above($screen-sm)
			display: block
	.review-slide
		margin 0 10px
	.reviews-slider
		margin-top: 50px
		position: relative
		+above($screen-sm)
			padding-bottom: 30px
		.arrow
			position: absolute
			left -50px
			top 50%
			margin-top: -35px
			&:focus
				outline none
		.arrow-right
			left auto
			right -50px
	.review-content
		overflow: hidden
	.review-bottomline
		margin-top: 25px
		+above($screen-sm)
			margin-top: 0
	.i-calendar
		margin-right: 15px
	.review-links
		margin-top: 20px
	blockquote
		margin: 0
		margin-top: 20px
		+above($screen-sm)
			margin-top: 0
		cite
			span
				font-weight: 700
				line-height: 1.5
				display: block
				font-size: 1.2rem
				font-style: normal
		p
			font-style: italic
			line-height: 1.5
	.review-all-link
		margin-left: 18px
	.btn
		width: 100%
		margin 10px 0
		text-align: center
		+above($screen-sm)
			width: auto
			margin: 0
			margin-left: 16px
	.date
		display: inline-block
		+above($screen-sm)
			margin-top: 8px
	.review-links
		+above($screen-sm)
			float: right
			margin-top: 0
	.review-aside
		text-align: center
		+above($screen-sm)
			float: left
			margin-right: 30px

.ceo-block
	margin 20px 0
	line-height: 1.5
	padding-bottom: 40px
	.more-link
		clear both
		display: block
		width: 100%
		text-align: right

// DISCOUNTS-PAGE
	.discounts-page
		.discount
			margin 10px 0
			+above($screen-sm)
				margin 40px 0