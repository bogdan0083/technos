// Hamburger Settings
// ------------------------------------------------------------------------
$hamburger-settings = 4px 8px;



// Hamburger Generator
// ------------------------------------------------------------------------
hamburger-generator($width = 37px, $height = 4px, $gutter = 8px, $color = white,
                    $border-radius = 0, $duration = .3s,
                    $timing-function = ease)
  // Set variables
  push($hamburger-settings, $height, $gutter)

  position: relative
  margin-top: $height + $gutter
  margin-bottom: $height + $gutter

  &,
  &:before,
  &:after
    display: block
    width: $width
    height: $height
    transition: background-color $duration $timing-function,
                transform $duration $timing-function

    if ($border-radius != 0)
      border-radius: $border-radius

    background-color: $color

  &:before,
  &:after
    position: absolute
    content: ""

  &:before
    top: -($height + $gutter)

  &:after
    top: $height + $gutter



// Hamburger Animation
// ------------------------------------------------------------------------
hamburger-animation()
  $height = $hamburger-settings[0]
  $gutter = $hamburger-settings[1]
  background-color: transparent

  &:before
    transform: translateY($gutter + $height) rotate(45deg)

  &:after
    transform: translateY(-($gutter + $height)) rotate(-45deg)