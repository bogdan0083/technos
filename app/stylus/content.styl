.catalog-nav
	background-color: #f3f3f3
	border-top 1px solid $dark-blue
	padding-top: 15px
	margin-bottom: 30px
	display: none
	+above($screen-sm)
		display: block
	h1
		font-size 1.385rem
		text-transform: uppercase
		color #213452
		text-align: center
	.catalog-nav-list
		padding: 0
		margin: 0
		list-style none
		> li > a
			display: block
			text-decoration: none
			text-transform: uppercase
			transition all 0.3s
			position: relative
			line-height: 1.4
			padding 20px 25px 20px 45px
			font-size: 0.95rem
			&:after
				content ''
				sprite($arr_down)
				position: absolute
				right 10px
				top 50%
				margin-top: -5px
			.icon
				position: absolute
				left 25px
				top 50%
				transform translate(-50%, -50%)
			&:hover
				font-weight: 700
		.no-subcat
			> a:after
				display: none
		.submenu
			padding 20px 0
			list-style none
			margin: 0
			background-color: #e4e3f5
			box-shadow inset 0 0 30px 0 rgba(black, 0.1)
			display: none
			&.active
				display: block
			a
				display: block
				padding 15px 20px
				text-decoration: none
				text-align: center
				position: relative
				&:before, &:after
					content ''
					width: 28px
					height: 1px
					background-color: $dark-blue
					position: absolute
					left 50%
					top 0
					margin-left: -14px
					transition all 0.3s
					transform translateX(-100%)
					opacity: 0
				&:after
					top auto
					bottom 0
					transform translateX(100%)
				&:hover
					&:before, &:after
						opacity: 1
						transform none


