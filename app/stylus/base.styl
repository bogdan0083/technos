html
    box-sizing border-box
    font-size: 12px
    position: relative
    min-height 100%
    +above($screen-sm)
        font-size: 13px
*, *:before, *:after
    box-sizing inherit


generateClasses($spritesheet_sprites)

body
    color black
    font-size 1rem
    font-family 'Helvetica Neue Cyr', sans-serif
    font-weight 400
    min-height: 570px
a
    text-decoration underline
    color inherit
    transition all 0.3s
    &:hover
        color white
        text-decoration none

.icon
    display inline-block
    vertical-align middle
    position relative
    background-color: transparent
    padding: 0
    border none
    &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        opacity: 0
        transition all 0.3s
    &:after
        content ''
        top 0
        left 0
        position: absolute
        opacity: 1
        transition all 0.3s
    + span
        display inline-block
        vertical-align middle

img
    max-width 100%

.nav-trigger-wrap
    text-align: center
    float: right
    +above($screen-sm)
        display: none

.nav-trigger
    margin: 0 auto
    hamburger-generator()
    text-align center
    margin-top 15px
    position relative
    z-index 10
    &.active
        hamburger-animation()
    +above(880px)
        display none

.page-wrapper
    transition all 0.3s
    &.active
        transform translateX(-200px)

.colored-white
    color white

.container
    margin: 0 auto

.btn
    display: inline-block
    border 1px solid white
    height: 40px
    line-height: 38px
    padding 0 20px
    text-decoration: none
    background-color: transparent
    transition all 0.3s
    &:hover
        background-color: #fff
        color $dark-blue
