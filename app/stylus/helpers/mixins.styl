generateClasses($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];

    if match('hover', $sprite_name) {
    } else {
      .i-{$sprite_name} {
        spriteWidth($sprite);
        spriteHeight($sprite);

        &:after {
          sprite($sprite)
        }
      }
    }

  }
}

