.header
	width: 100%
	margin-top: 10px
	padding-top: 10px
	margin-bottom: 40px
	.nav-trigger-wrap
		margin-top: 2px
	&-aside
		+above($screen-sm)
			float: left
			width: 200px
		+above($screen-md)
			width: 270px
	&-body
		overflow: hidden

.logo
	font-size 2.846rem
	text-decoration: none
	text-transform: uppercase
	+above($screen-sm)
		font-size 2rem
		display: inline-block
	+above($screen-md)
		font-size 2.923rem
		display: inline-block
	span
		color #e4e3f5
	&-caption
		font-size: 1.388rem
		text-align: center
		margin-top: 6px
		line-height: 1.3
		+above($screen-sm)
			font-size 0.9rem
			text-align: left
		+above($screen-md)
			font-size 1.077rem
			text-align: left

.address-block
	text-align: center
	position: relative
	font-size: 1.846rem
	margin 15px 0
	.phone
		font-weight: 500
		margin-bottom: 15px
		+above($screen-sm)
			margin-bottom: 0
	&-secondary
		display: none
		+above($screen-sm)
			display: inline-block
	.icon
		display: none
	+above($screen-sm)
		display: inline-block
		font-size 1rem
		text-align: left
		line-height: 1.5
		padding-left: 28px
		width: 230px
		vertical-align: middle
		margin: 0

		.icon
			display: inline-block
			position: absolute
			left 0
			top 50%
			margin-top: -13px
	+above($screen-md)
		width: auto
		&-secondary
			margin-left 40px

.cart-block
	text-transform: uppercase
	margin-top: 10px
	+above($screen-sm)
		margin-top: 14px
		display: inline-block
		vertical-align: middle
		margin-left: 20px
		float: right
	+above($screen-md)
		margin-top: 5px
	&-count
		text-decoration: none
		height: 25px
		width: 25px
		margin-right: 4px
		display: inline-block
		vertical-align: middle
		border 1px solid white
		text-align: center
		line-height: 24px
		font-size: 0.9rem
	.icon
		margin-right: 4%

	.cart-block-link
		text-decoration: none
	.cart-block-checkout
		float: right
		margin-top: 2px
		+above($screen-sm)
			text-transform: none
	.cart-block-link, .cart-block-checkout
		font-size 1.385rem
		vertical-align: middle
		display: inline-block
		+above($screen-sm)
			font-size: 1rem
			float: none
			display: block
			text-align: right
			line-height: 1.3
	+above($screen-sm)
		position: relative
		margin-left: 0
		padding-left: 68px
		&-count, .i-cart
			position: absolute
		&-count
			left 0
			top 3px
		.i-cart
			left 34px
			top 4px

.categories-nav
	overflow: hidden
	+above($screen-sm)
		overflow: visible
		position: absolute
		left 0
		top 55%
		transform translateY(-100%)
		width: 100%
.categories-nav-item
	height: 116px
	vertical-align: middle
	background-color: $dark-blue
	display: table
	width: 100%
	text-decoration: none
	transition all 0.3s
	text-align: center
	margin 20px 0
	padding 10px 20px
	&:hover
		background-color: white
		color $dark-blue
		h2
			font-weight: 500
	.btn, .label-mark
		display: none
	&:hover
		text-decoration: underline
	h2
		text-decoration: none
		display: table-cell
		vertical-align: middle
		font-weight: 400
		text-transform: uppercase
		font-size 1.231rem
		line-height: 1.5
		position: relative
		z-index: 10
	+above($screen-sm)
		background-color: transparent
		text-align: left
		padding 10px 0
		height: 142px
		border-top 1px solid white
		border-bottom 1px solid white
		position: relative
		h2
			display: table-cell
			vertical-align: middle
		.label-mark
			position: absolute
			bg('../images/label.png')
			right 0
			bottom 5px
			display: table
			text-align: center
			span
				font-weight: 700
				color black
				text-transform: uppercase
				transform rotate(-13deg)
				display: table-cell
				font-size: 1.2rem
				vertical-align: middle
		.btn
			display: inline-block
			position: absolute
			left 0
			bottom 20px
			transition all 0.3s
			opacity: 0
		&:hover
			background-color: transparent
			color white
			text-decoration: none
			padding-bottom: 70px
			padding-top: 30px
			//transform translateY(-30px)
			.btn
				opacity: 1
			h2
				text-decoration: none

.header-nav
	margin-bottom: -6px
	ul
		padding: 0
		margin: 0
		list-style none
		text-align: justify
		padding-top: 4px
		&:after
			content ''
			width: 100%
			display: inline-block
		li
			display: inline-block
		a
			text-decoration: none
			text-transform: uppercase
			font-weight: 700
			padding 10px
			display: block
			position: relative
			transition all 0.3s
			font-size: 0.9rem
			+above($screen-md)
				font-size: 1rem
			&:hover
				&:before, &:after
					opacity: 1
					transform none
			&:before, &:after
				content ''
				width: 28px
				height: 1px
				background-color: white
				position: absolute
				left 50%
				top 0
				margin-left: -14px
				transition all 0.3s
				transform translateX(-100%)
				opacity: 0
			&:after
				top auto
				bottom 0
				transform translateX(100%)