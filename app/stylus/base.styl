.mobile-menu
	background-color white
	color black
	width 200px
	padding 20px
	position fixed
	right 0
	top 0
	min-height 100%
	overflow auto
	transition transform 0.3s
	transform translateX(100%)
	&.active
		transform translateX(0)
	+above(880px)
		display none
	a, span
		font-weight 700
		text-transform uppercase
		text-decoration none
		display block
		margin 10px 0
		font-size 1.3rem
		&:first-child
			margin-top 0
	span
		color white

.field
	height: 40px
	display: block
	width: 100%
	padding-left: 20px
	padding-right: 20px
	background-color: rgba(white, 0.7)
	border: 1px solid #8b8ba6
	margin 10px 0
	&-text
		resize none
		height: 100px
		padding-top: 10px
	&:focus
		border-color: gray
		outline none

.fadeInUp
	animation fadeInUp

.animated
	animation-fill-mode both

.fp-background
	background url("../images/main-bg.jpg") no-repeat center / cover
	position: fixed
	left 0
	top 0
	width: 100%
	height: 100%
	z-index: -100

address
	font-style: normal

.heading
	font-size 1.2rem
	text-align: center
	text-transform: uppercase
	padding 15px 0
	position: relative
	&:before, &:after
		content ''
		width: 230px
		height: 1px
		background-color: $dark-blue
		position: absolute
		left 50%
		top 0
		margin-left: -115px
		transition all 0.3s
	&:after
		top auto
		bottom 0
	+above($screen-sm)
		font-size 1.846rem
